<!-- 投稿詳細画面 -->
<div class="container">
<div class="row">
	<div class="col-xs-3">

		<!-- サクセスメッセージの表示 -->
		<p id = "notice"><%= notice %></p>

		<!-- 部分テンプレートの適用 -->
		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
		<!-- ---------------- -->
	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tr>
				<td>
					<%= link_to (@book2.user) do %>
						<%= attachment_image_tag(@book2.user, :profile_image, :size => '50x50', fallback: "no_image.jpg") %><br>
						<%= @book2.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book2.title, @book %></td>
				<td><%= @book2.body %></td>
				<% if @book2.user_id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@book2), class: "btn-sm btn-success edit_book_#{@book2.id}" %></td>
					<td><%= link_to "Destroy",book_path(@book2), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book2.id}" %></td>
      			<% end %>
			</tr>
		</table>
	</div>
</div>
</div>